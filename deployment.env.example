# Maya-Web Deployment Configuration
# Set up your deployment credentials for all platforms

# ==================== DEPLOYMENT PLATFORMS ====================

# Vercel (Recommended for React/Next.js)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_TEAM_ID=your_team_id_here

# Netlify (Great for static sites and JAMstack)
NETLIFY_TOKEN=your_netlify_token_here
NETLIFY_SITE_ID=your_site_id_here

# Cloudflare Pages (Fast global CDN)
CLOUDFLARE_TOKEN=your_cloudflare_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# AWS Amplify (Full-stack applications)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Firebase Hosting (Google's platform)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_TOKEN=your_firebase_token_here

# Render (Simple deployment)
RENDER_TOKEN=your_render_token_here

# Railway (Modern deployment)
RAILWAY_TOKEN=your_railway_token_here

# Fly.io (Global edge deployment)
FLY_API_TOKEN=your_fly_token_here

# DigitalOcean App Platform
DIGITALOCEAN_TOKEN=your_digitalocean_token_here

# Heroku (Classic platform)
HEROKU_API_KEY=your_heroku_api_key_here

# GitHub Pages (Free hosting)
GITHUB_TOKEN=your_github_token_here

# Surge.sh (Simple static hosting)
SURGE_TOKEN=your_surge_token_here

# GitLab Pages
GITLAB_TOKEN=your_gitlab_token_here

# Azure Static Web Apps
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Google Cloud Run
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path_to_service_account.json

# Linode App Platform
LINODE_TOKEN=your_linode_token_here

# Platform.sh
PLATFORMSH_TOKEN=your_platformsh_token_here

# Koyeb
KOYEB_TOKEN=your_koyeb_token_here

# Stormkit
STORMKIT_TOKEN=your_stormkit_token_here

# Deno Deploy
DENO_DEPLOY_TOKEN=your_deno_deploy_token_here

# ==================== DEPLOYMENT SETTINGS ====================

# Default deployment settings
DEFAULT_BUILD_COMMAND=npm run build
DEFAULT_OUTPUT_DIRECTORY=dist
DEFAULT_NODE_VERSION=18

# Custom domain settings
ENABLE_CUSTOM_DOMAINS=true
DEFAULT_SSL_PROVIDER=letsencrypt

# Environment variables for all deployments
DEFAULT_ENV_VARS={"NODE_ENV":"production","NEXT_PUBLIC_API_URL":"https://api.maya-web.app"}

# ==================== MONITORING & ANALYTICS ====================

# Deployment monitoring
ENABLE_DEPLOYMENT_MONITORING=true
DEPLOYMENT_TIMEOUT=300000
DEPLOYMENT_RETRY_ATTEMPTS=3

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
LIGHTHOUSE_THRESHOLD=90

# ==================== SECURITY SETTINGS ====================

# Security headers
ENABLE_SECURITY_HEADERS=true
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# ==================== BACKUP & RECOVERY ====================

# Backup settings
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Rollback settings
ENABLE_AUTO_ROLLBACK=true
ROLLBACK_THRESHOLD=5
ROLLBACK_CHECK_INTERVAL=60000

# ==================== NOTIFICATIONS ====================

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Slack notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Discord notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# ==================== CUSTOM DOMAINS ====================

# Domain management
ENABLE_DOMAIN_MANAGEMENT=true
DEFAULT_DNS_PROVIDER=cloudflare
DOMAIN_VERIFICATION_TIMEOUT=300000

# SSL certificate management
ENABLE_AUTO_SSL=true
SSL_PROVIDER=letsencrypt
SSL_RENEWAL_THRESHOLD=30

# ==================== CDN & OPTIMIZATION ====================

# CDN settings
ENABLE_CDN=true
CDN_PROVIDER=cloudflare
CDN_CACHE_TTL=86400

# Image optimization
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_FORMATS=webp,avif
IMAGE_QUALITY=80

# Code optimization
ENABLE_CODE_SPLITTING=true
ENABLE_TREE_SHAKING=true
ENABLE_MINIFICATION=true

# ==================== TESTING & QA ====================

# Automated testing
ENABLE_AUTOMATED_TESTING=true
TEST_COMMAND=npm test
TEST_TIMEOUT=30000

# Performance testing
ENABLE_PERFORMANCE_TESTING=true
LIGHTHOUSE_COMMAND=npx lighthouse
PERFORMANCE_BUDGET=1000

# Accessibility testing
ENABLE_A11Y_TESTING=true
A11Y_COMMAND=npx pa11y

# ==================== ANALYTICS & MONITORING ====================

# Analytics providers
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_key

# Error tracking
SENTRY_DSN=your_sentry_dsn
BUGSNAG_API_KEY=your_bugsnag_key

# Uptime monitoring
UPTIME_ROBOT_API_KEY=your_uptime_robot_key
PINGDOM_API_KEY=your_pingdom_key

# ==================== INTEGRATIONS ====================

# CI/CD integrations
GITHUB_ACTIONS_ENABLED=true
GITLAB_CI_ENABLED=true
JENKINS_URL=your_jenkins_url

# Database integrations
DATABASE_URL=your_database_url
REDIS_URL=your_redis_url

# External APIs
STRIPE_API_KEY=your_stripe_key
SENDGRID_API_KEY=your_sendgrid_key
TWILIO_API_KEY=your_twilio_key

# ==================== DEVELOPMENT SETTINGS ====================

# Development mode
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Hot reloading
ENABLE_HOT_RELOAD=true
HOT_RELOAD_PORT=3001

# Development tools
ENABLE_DEVTOOLS=true
ENABLE_SOURCE_MAPS=true
ENABLE_DEBUG_MODE=true
